%html
  %head
    %title Gestor de entidade
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body.orange-body
    = render 'layouts/entity/partials/top'
    .container
      - flash.each do |key, value|
        .alert{class: "alert-#{key}"}
          = value
      = yield