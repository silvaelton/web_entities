.row
  .col-md-12
    %h2 
      %b Gestão de lista - #{@list.name}
.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          %b= link_to "Voltar para listagem", lists_path
      .panel-body
        .row
          .col-md-12
            %table.table.table-striped.table-bordered.table-hover
              %thead
                %tr
                  %th Nº
                  %th Nome
                  %th Sigla
                  %th CNPJ
                  %th Ação
              %tbody.list-index
                = render 'index'